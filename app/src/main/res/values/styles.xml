<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="materialButtonStile">
        <item name="backgroundTint">@color/button_background_state</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
    </style>
    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <!-- (1)-->
        <item name="android:windowIsFloating">false</item>
        <!-- (2) -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- new -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_blue_w_state</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonBilling" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_g_w30_state</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_text_w_b_state_new</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonOutlinedTransparentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_background_t_w_state_new</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonOutlinedTransparentButtonIcon" parent="ButtonOutlinedTransparentButton">
        <item name="iconTint">@color/button_text_b_w_state_new</item>
    </style>

    <style name="ButtonTransparentNoOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_background_t_w_state_new</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
        <item name="iconTint">@color/button_text_b_w_state_new</item>
        <item name="iconSize">34dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.StreamingTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="ButtonTransparentNoOutlinedProfile" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/button_background_t_w_state_new</item>
        <item name="android:textColor">@color/button_text_b_w_state_new</item>
    </style>
    <style name="ButtonTransparentNoOutlinedProfileSub" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="IconButtonOutlinedTransparentButton" parent="ButtonOutlinedTransparentButton">
        <item name="iconTint">@color/button_text_b_w_state_new</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputLayout</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_text_filld_w_large</item>
        <item name="android:textColor">@color/calendar_day_of_week_state</item>
    </style>


    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="boxCollapsedPaddingTop">0dp</item>

        <item name="shapeAppearance">@style/ShapeAppearance.StreamingTheme.LargeComponent</item>
    </style>

    <style name="PasswordTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="colorError">@color/light_red</item>
    </style>

    <style name="AppThemeTab" parent="Theme.AppCompat" />

    <!--Player-->
    <style name="ExoStyledControlsCustom" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">27dp</item>
        <item name="android:minHeight">27dp</item>
    </style>

    <style name="ExoStyledControlsCustom_sight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="CustomTabText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>