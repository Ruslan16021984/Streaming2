<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvQuality"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:elevation="0dp"
    android:focusable="true"
    android:checkable="true"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/button_background_t_w_state_new"
    app:cardForegroundColor="@android:color/transparent"
    app:rippleColor="@android:color/transparent"
    app:shapeAppearance="@style/ShapeAppearance.StreamingTheme.SmallComponent"
    app:strokeColor="@color/button_background_t_w_state_new"
    app:strokeWidth="0dp">

<LinearLayout
    android:id="@+id/llQuality"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/background_item_dialog_quality"
    android:duplicateParentState="true">

    <TextView
        android:id="@+id/tvQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_46"
        android:textColor="@color/button_text_b_w_state_quality"
        android:textSize="18sp"
        android:duplicateParentState="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1080" />

</LinearLayout>
</com.google.android.material.card.MaterialCardView>

