<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="291dp"
    android:layout_height="34dp"
    android:background="@drawable/timed_button_background"
    android:focusable="true"
    android:id="@+id/button_fill"
    android:duplicateParentState="true"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/timedButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/button_text_b_w_state_new"
        android:textAppearance="@style/TextAppearance.StreamingTheme.Headline6"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timedButtonTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Полный матч" />

    <TextView
        android:id="@+id/timedButtonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/button_text_b_w_state_new"
        android:textAppearance="@style/TextAppearance.StreamingTheme.Headline6"
        app:layout_constraintBaseline_toBaselineOf="@+id/timedButtonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/timedButtonText"
        tools:text="1:25:17" />

</androidx.constraintlayout.widget.ConstraintLayout>